style {
    header {
        font-size: 2.5em;
        font-weight: 300;
        background-color: #f1f1f1;
        padding: 1em;
        text-align: center;
    }
    body {
        font-family: "Helvetica Neue", Roboto, "Arial Nova", "Segoe UI", Arial,
            sans-serif;
        margin: 0;
    }
    .color-picker-container {
        position: absolute;
        top: 30%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    .logo {
        height: 2.2em;
    }
}


<header>
    <img src=".static/logo.png" width="100" height="100" alt="marko logo" class="logo"/>
    <div>${input.title}</div>
</header>
